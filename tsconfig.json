{
	"compilerOptions": {
		"target": "ES2017",
		"module": "commonjs",
		"allowJs": true,
		"outDir": "build",
		// "strict": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"src/**/*.spec.ts"
	]
}